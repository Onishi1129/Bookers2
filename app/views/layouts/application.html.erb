<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <a class="navbar-brand" href="/">
         <span>Bookers</span>
       </a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to user_path(current_user.id), class: 'nav-link text-light', method: :get do %>
              <i class="fas fa-home" ></i>Home
            <% end %>
              </li>
              <li class="">
                <%= link_to users_path, class: "nav-link text-light", method: :get do %>
              <i class="fas fa-users" ></i>Users
                <% end %>
              </li>
              <li class="">
                <%= link_to books_path, class: "nav-link text-light", method: :get do %>
                <i class="fas fa-book-open" ></i> Books
                <% end %>
              </li>
              <li class="">
                <%= link_to destroy_user_session_path,  class:"nav-link text-light", method: :delete do %>
              <i class="fas fa-sign-out-alt" ></i> Logouts
                <% end %>
              </li>
            <% else %>
              <li class="">
                <%= link_to root_path, class:"nav-link text-light", method: :get do %>
                <i class="fas fa-home" ></i>Home
                <% end %>
              </li>
              <li class="">
                <%= link_to home_about_path, class:"nav-link text-light", method: :get do %>
                <i class="fas fa-link" ></i>About
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_registration_path, class:"nav-link text-light", method: :get do %>
                <i class="fas fa-user-plus" ></i>sign up
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_session_path, class:"nav-link text-light", method: :get do %>
                <i class="fas fa-sign-in-alt" ></i>login
                <% end %>
              </li>
            <% end %>
          </ul>


    </header>

    <div class="body">
      <p class="notice"><%= notice %></p>

      <div class="container">

      <%= yield %>
      </div>
      </div>


        <footer>
          <div class="container mt-5">
  	       <div class="row">
     	      <div class="mx-auto">
    		     <p>CopyRight Infratop.inc</p>
    		     </div>
    		     </div>
    		    </div>
        </footer>


  </body>
</html>